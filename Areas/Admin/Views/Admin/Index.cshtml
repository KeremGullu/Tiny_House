@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <h2>Admin Panel</h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Toplam Ev Sayısı</h5>
                    <p class="card-text display-4">@ViewBag.TotalHouses</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kullanıcı</h5>
                    <p class="card-text display-4">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Toplam Rezervasyon</h5>
                    <p class="card-text display-4">@ViewBag.TotalReservations</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <a asp-controller="AdminTinyHouses" asp-action="Index" class="btn btn-primary w-100">
                Evleri Yönet
            </a>
        </div>
        <div class="col-md-6">
            <a asp-controller="AdminUsers" asp-action="Index" class="btn btn-primary w-100">
                Kullanıcıları Yönet
            </a>
        </div>
    </div>
</div> 